{
  "name": "nestjs-mongo-docker",
  "version": "0.1.0",
  "description": "Nest.js + Mongo + Docker Starter",
  "author": "Pol Gubau Amores <gubaupol@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug 0.0.0.0:9229 --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:dev": "docker-compose up",
    "docker:build": "docker-compose build",
    "docker:run": "docker-compose up --watch",
    "docker:reset": "pnpm run docker:down && pnpm run docker:build && pnpm run docker:dev"
  },
  "dependencies": {
    "@nestjs/common": "10.3.10",
    "@nestjs/config": "3.2.3",
    "@nestjs/core": "10.3.10",
    "@nestjs/mongoose": "10.0.6",
    "@nestjs/platform-express": "10.3.10",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "0.14.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "8.4.4",
    "passport-local": "^1.0.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.4.1",
    "@nestjs/devtools-integration": "^0.1.6",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/schematics": "10.1.2",
    "@nestjs/swagger": "7.4.0",
    "@nestjs/testing": "10.3.10",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "4.17.21",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prettier": "^2.1.2",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.8",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5"
  },
  "jest": {
    "preset": "ts-jest",
    "rootDir": "src",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/tsconfig.json"
      }
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
